<main class="flex-wrapper">
  {{#Form title="Регистрация" onSubmit=onSignin}}
    {{{FormField label="Почта" type="email" name="email" ref="email"}}}
    {{{FormField label="Логин" type="text" name="login" ref="login"}}}
    {{{FormField label="Имя" type="text" name="first_name" ref="first_name"}}}
    {{{FormField
      label="Фамилия"
      type="text"
      name="second_name"
      ref="second_name"
    }}}
    {{{FormField label="Телефон" type="phone" name="phone" ref="phone"}}}
    {{{FormField
      label="Пароль"
      type="password"
      name="password"
      ref="password"
    }}}
    {{{FormField
      label="Пароль (еще раз)"
      type="password"
      name="password_confirm"
      ref="password_confirm"
    }}}
    <button class="button" type="submit">Зарегистрироваться</button>
    <button onclick="goToPage('login')" class="button-link">Войти</button>
  {{/Form}}
</main>